<div class="container mt-5">
  <div class="row">
    <div class="col-5">
      <div class="profile-name">
        <%= link_to edit_user_registration_path do %>
          <p><i class="fa-solid fa-pen-to-square icon-gray"></i> Edit profile</p>
        <% end %>
        <h1><%= current_user.name.upcase %></h1>
      </div>
      <div class="profile-basic">
        <div class="row align-middle">
          <div class="col-3">
            <i class="fa-solid fa-envelope"></i>
          </div>
          <div class="col-9">
            <p><%= current_user.email %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-5">
      <div class="profile-image">
        <div>
          <%= image_tag 'AnnaEfthymiadou'%>
        </div>
      </div>
    </div>
  </div>
</div>
