<div class = "home-container">

  <div data-controller="join-organisation">

    <% if current_user.organisation %>
      <div data-join-organisation-target = "belongs">

          <h5><%= current_user.organisation.name %>
          <%# <%= link_to "View shifts",  %>
          <%# <%= link_to "Edite",  %>
          <%# <%= link_to "Leave",  %>
      </div>

    <% else %>
      <div data-join-organisation-target = "does-not-belong">
        <h3>Logged in as <%= current_user.name %> </h3>

        <h5> You aren't a member of any organisations </h5>
        <h5> Join an existing one or create a new one </h5>

        <h1 class="mt-5 mb-4">Organisations</h1>

        <div>
          <% @organisations.each do |organisation| %>
            <h5><%= organisation.name %> <%= render partial: "shared/edit_organisation", locals: {organisation: organisation} %>, <%= link_to "join", organisation_path(organisation), data: {action: "click->join-organisation#join"} %> </h5>
          <% end %>
        </div>
      </div>

    <% end %>

  </div>

</div>
