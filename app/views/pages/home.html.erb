<div class = "home-container">

  <div data-controller="join-organisation">

    <% if current_user.organisation %>
      <div data-join-organisation-target = "belongs">

          <h5><%= current_user.organisation.name %>
          <%# <%= link_to "View shifts",  %>
          <%# <%= link_to "Edite",  %>
          <%# <%= link_to "Leave",  %>
      </div>

    <% else %>

      <h3>Logged in as <%= current_user.name %> </h3>

      <h5> You aren't a member of any organisations </h5>
      <h5> Join an existing one or create a new one </h5>

      <h1 class="mt-5 mb-4">Organisations</h1>

      <div>
        <% @organisations.order(name: :asc).each do |organisation| %>
          <div class="d-flex align-items-center">
          <h5 class="mx-3 my-3"> <%= organisation.name %> </h5>
          <%= render partial: "shared/edit_organisation", locals: {organisation: organisation}%>
          <%= link_to organisation_join_organisation_path(organisation) do %>
            <button type="button" class="btn-purple-sm mx-3 my-3" data-bs-toggle="modal" data-bs-target="#modal-<%= organisation.id %>">
              Join
            </button>
          <% end %>
          </div>
        <% end %>
      </div>

    <% end %>

  </div>

</div>
