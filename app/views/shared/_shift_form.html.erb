
<td>
  <%= current_user.name %>
</td>

<%= simple_form_for [@organisation, @shift], data: {turbo: false} do |f| %>
  <td class="form-inputs">
    <%= f.date_select :start, html5: true, required: true, label: false %>
  </td>
  <td class="form-inputs">
    <%= f.time_select :start, ignore_date: true, html5: true, required: true, label: false %>
  </td>
  <td class="form-inputs">
    <%= f.time_select :finish, ignore_date: true, html5: true, required: true, label: false %>
  </td>
  <td class="form-inputs">
    <!-- use simple_fields_for for shifts and breaks nested attributes -->
    <%= f.simple_fields_for :breaks do |w| %>
      <%= w.input :break_length, required: true, label: false %>
    <% end %>
  </td>
  <td colspan="2" class="form-actions">
    <%= f.button :submit, "Add shift", class: "form-btn" %>
  </td>
<% end %>
