<style>

.mask-window {
  backdrop-filter: blur(15px);
  background-color: rgba(255,255,255,.5);
  border-radius: 1em;
  border: 2px solid rgba(255,255,255,.1);
  background-clip: padding-box;
  box-shadow: 10px 10px 10px rgba(46, 54, 68, 0.03);
  min-height: 175px;
  min-width: 300px;
}

.modal-header {
  justify-content: center;
  font-size: 30px;
  border: 1px solid transparent;
}

.modal-content {
  background-color: #9334E9;
}

</style>

<div class="row justify-content-center">
  <div class="col-auto">
    <button type="button" class="btn-purple" data-bs-toggle="modal" data-bs-target="#edit-organisation">
      Edit organisation
    </button>

    <div class="modal fade" id="edit-organisation" tabindex="-1" aria-labelledby="edit-organisationLabel" aria-hidden="true">
      <div class="modal-dialog text-white">
        <div class="mask-window modal-content justify-content-center">
          <div class="modal-header">
            <h5 class="text-center modal-title" id="edit-organisationLabel"> Edit organisation </h5>
          </div>
          <div class="modal-body">
            <%= simple_form_for organisation do |f| %>
              <div class="form-inputs w-100">
                <%= f.input :name %>
                <%= f.input :hourly_rate %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Update", class: "btn btn-white" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
